@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<section class="top-padding bg-light" style="min-height:850px">
    <div class="container">
        <div class="row">

            <div class="col-md-6">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="col-md-12">
                            <div class="overflow-hidden">
                                <section class="animate__animated animate__fadeInUp">
                                    <form id="account" method="post">
                                        <h4>Faça seu Login.</h4>
                                        <hr />
                                        <div asp-validation-summary="All" class="text-danger"></div>
                                        <div class="form-group">
                                            <label asp-for="Input.Email">E-mail</label>
                                            <input asp-for="Input.Email" class="form-control" />
                                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Input.Password">Senha</label>
                                            <input asp-for="Input.Password" class="form-control" />
                                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <div class="checkbox">
                                                <label asp-for="Input.RememberMe">
                                                    <input asp-for="Input.RememberMe" />
                                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                                </label>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-primary">Acessar</button>
                                        </div>
                                        <div class="form-group">
                                            <p>
                                                <a id="forgot-password" asp-page="./ForgotPassword">Esqueceu sua Senha?</a>
                                            </p>
                                            <p>
                                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Experimente, caso você não tenha uma conta.</a>
                                            </p>
                                            <p>
                                                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Reenviar E-mail de confirmação</a>
                                            </p>
                                        </div>
                                    </form>
                                </section>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <div class="col-md-6 align-self-center">
                <section class="animate__animated animate__pulse">
                    <img src="~/img/login.svg" class="img-fluid" alt="Alternate Text" />
                </section>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
