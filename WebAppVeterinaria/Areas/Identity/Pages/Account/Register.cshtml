@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<section class="top-padding bg-light" style="min-height:850px">
    <div class="container">
        <div class="row">
            <div class="col-md-5">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="col-md-12">
                            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                <h4>Crie Sua conta Agora.</h4>
                                <hr />
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="Input.Nome">Nome</label>
                                    <input asp-for="Input.Nome" class="form-control" />
                                    <span asp-validation-for="Input.Nome" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Input.Email">E-mail</label>
                                    <input asp-for="Input.Email" class="form-control" />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Input.Password">Senha</label>
                                    <input asp-for="Input.Password" class="form-control" />
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Input.ConfirmPassword">Confirme sua Senha</label>
                                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>
                                <button type="submit" class="btn btn-primary">Registrar</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-7">
                <section class="">
                    <img src="~/img/registrar.svg" class="img-fluid" alt="Alternate Text" />
                </section>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}