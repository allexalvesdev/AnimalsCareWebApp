@model WebAppVeterinaria.Entity.Servico

@{
    ViewData["Title"] = "Detalhes do Serviço";
}

<section class="mt-5">
    <div class="container">
        <div style="background-color:white; width:100%; padding:40px; flex-wrap:wrap;" class="shadow-sm">
            <h1>@ViewData["Title"]</h1>
            <div>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Descricao)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Descricao)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Preco)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Preco)
                    </dd>
                </dl>
            </div>
            <div>
                @Html.ActionLink("", "Edit", new { Model.Id }, new { @class = "btn btn-light bg-white fas fa-pen p-2 shadow-sm text-warning" })
                <a class="btn btn-light" asp-action="Index">Voltar</a>
            </div>
        </div>
    </div>
</section>